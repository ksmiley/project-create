package edu.uky.comm.controls{	import fl.controls.RadioButton;	import fl.controls.ButtonLabelPlacement;		public class MultilineRadioButton extends RadioButton	{		public function MultilineRadioButton()		{			super();		}				override protected function configUI():void		{			super.configUI();			textField.multiline = true;			textField.wordWrap = true;		}				override protected function drawLayout():void		{			super.drawLayout();			var txtPad:Number = Number(getStyleValue("textPadding"));			var paddedIconW:Number = (icon == null) ? 0 : icon.width+txtPad;			var placement:String = (icon == null && mode == "center") ? ButtonLabelPlacement.TOP : _labelPlacement;			if (placement == ButtonLabelPlacement.LEFT || placement == ButtonLabelPlacement.RIGHT)			{				textField.y = Math.round(txtPad / 2);				textField.width = width - paddedIconW - (2 * txtPad);				textField.height =  textField.textHeight + 4;				icon.y = txtPad;			}			// adjust these so the focus rectangle gets drawn correctly			background.x = Math.min(icon.x-txtPad, textField.x-txtPad);			background.y = Math.min(icon.y-txtPad, textField.y-txtPad);		}	}}